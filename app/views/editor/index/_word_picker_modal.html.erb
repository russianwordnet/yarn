<div class="<%= html_class %> modal hide fade" tabindex="-1" role="dialog"
  aria-labelledby="word-picker-modal-label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="word-picker-modal-label">Поиск и выбор слова</h3>
  </div>
  <div class="modal-body">
    <%= render 'shared/search' %>

    <ul class="nav nav-pills" id="grammar-selector">
      <li class="active">
        <a href="#" data-grammar="">Все</a>
      </li>
      <li>
        <a href="#" data-grammar="n">Существительные</a>
      </li>
      <li>
        <a href="#" data-grammar="v">Глаголы</a>
      </li>
      <li>
        <a href="#" data-grammar="a">Прилагательные</a>
      </li>
      <li>
        <a href="#" data-grammar="mwn">Неоднословные</a>
      </li>
    </ul>

    <div class="word-picker-content tab-content">
      <%= render 'editor/index/word_picker_listing', :words => words %>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" id="begin-tutorial">
      Пройти обучение
    </button>
    <button class="btn choice" id="choice-word" data-dismiss="modal"
      aria-hidden="true" disabled="true">
      Выбрать
    </button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Отменить</button>
  </div>
</div>
