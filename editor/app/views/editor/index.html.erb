<div id="editor-bar">
  <div class="container">
    <h2>Редактор синсетов</h2>
    <%= render 'editor/index/searchbar' %>
  </div>
</div>

<div id="editor-ui">
  <div id="editor-area">
    <script type="text/javascript">
      function updateHint(wordID, definitionID) {
        $.ajax({
          type: "GET",
          url: "<%= editor_sample_url %>",
          data: { word_id: wordID, definition_id: definitionID }
        }).done(function(sample) {
          $("#hint").html(sample);
        });
      }

      window.updateHint = updateHint;
    </script>

    <div class="row-fluid">
      <%= render 'editor/index/left_pane' %>
      <%= render 'editor/index/right_pane' %>
    </div>

    <%= render 'editor/index/add_definition_modal' %>
  </div>
</div>

<%= render 'editor/index/word_picker_modal', :words => @words, :html_class => 'word-picker-modal' %>
<%= render 'editor/index/word_picker_modal', :words => @words, :html_class => 'synonym-picker-modal' %>
<%= render 'editor/index/mustache_templates' %>
